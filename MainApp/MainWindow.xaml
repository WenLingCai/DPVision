<Window x:Class="PrismDryIocDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="Prism.DryIoc .NET 8 MVVM Demo" Height="300" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="{Binding Greeting}" FontSize="24" HorizontalAlignment="Center" />
            <Button Content="点击改变问候语"
                    Command="{Binding ChangeGreetingCommand}"
                    Margin="0,20,0,0"
                    Width="160"/>
        </StackPanel>
    </Grid>
</Window>