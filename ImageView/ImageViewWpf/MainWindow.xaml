<Window
    x:Class="ImageViewWpf.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:imageView="clr-namespace:ImageView;assembly=ImageView"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ImageViewWpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    WindowStartupLocation="CenterScreen"
    Width="1200"
    Height="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <imageView:ImageView x:Name="roiDisplay" Grid.Row="0" />
        <UniformGrid Grid.Row="1" Rows="1">
            <Button
                Width="70"
                Click="AddRoiBtn_Click"
                Content="添加Roi" Height="19"  VerticalAlignment="Top" />
            <Button
                Width="90"
                Click="ShowInfoBtn_Click"
                Content="显示选中roi信息" />
            <Button Width="70" Click="DeleteSelectedRoiBtn_Click"
                    Content="删除选中Roi"/>
            <Button
                Width="70"
                Click="DispyImageButton_Click"
                Content="显示图片" />
            <Button Width="70" Click="FitImage_Click" Content="自适应"/>
            <Button Width="70" Click="ShowRoi_Click" Content="显示roi"/>
            <Button Width="70" Click="HideRoi_Click" Content="隐藏roi"/>
            <Button Width="70" Click="SaveImage_Click" Content="保存图像"/>
            <Button Width="70" Click="SaveScreenImage_Click" Content="保存截图"/>
            <Button Width="70" Click="SmearBtn_Click" Content="开始涂抹"/>
            <Button Width="70" Click="MaskBtn_Click" Content="掩膜"/>
            <Button Width="70" Click="EraseBtn_Click" Content="橡皮擦"/>
        </UniformGrid>
    </Grid>
</Window>
