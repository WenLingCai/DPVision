<Window x:Class="DPVision.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       

 xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
 xmlns:prism="http://prismlibrary.com/"
 prism:ViewModelLocator.AutoWireViewModel="True" 
Title="视觉主界面" Height="600" Width="1000">
 
   <DockPanel>
            <!-- 顶部菜单栏 -->
            <Menu DockPanel.Dock="Top" Height="40" Background="#F1F1F1">
                <Menu.Resources>
                    <Style TargetType="MenuItem">
                        <Setter Property="Height" Value="40"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="Padding" Value="20,0"/>
                        <!-- 可选：设置字体大小或其他属性 -->
                    </Style>
                </Menu.Resources>
                <MenuItem Header="相机管理"/>

            </Menu>

            <!-- 主体区域 -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <!-- ImageView 填充剩余空间 -->
                    <ColumnDefinition />
                    <!-- Flow UI 固定宽度300 -->
                    <ColumnDefinition Width="400" />
                    <!-- Flow选择界面 固定宽度20 -->
                    <ColumnDefinition Width="80" />
                </Grid.ColumnDefinitions>

                <!-- ImageView 控件，填满左侧 -->
                <Border Grid.Column="0" Background="#EEE" Margin="5,5,5,5">
                    <Image x:Name="MainImageView" Stretch="Uniform" />
                </Border>

                <!-- Flow UI展示区 -->
                <Border Grid.Column="1" Background="#CCF" Margin="5,5,5,5" CornerRadius="5">
                    <!-- 这里放置你的Flow相关UI，可以换成ContentControl绑定不同Flow界面 -->
                    <ContentControl x:Name="FlowUiContent"/>
                </Border>

                <!-- Flow选择（示例用垂直ListBox，可自定义） -->
                <Border Grid.Column="2" Background="White" Margin="1,1,1,1" CornerRadius="5">
                    <ListBox ItemsSource="{Binding Items}" 
                 DisplayMemberPath="Name"
                 Margin="1">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="SelectionChanged">
                                <i:InvokeCommandAction 
                        Command="{Binding SelectionChangedCommand}"
                        CommandParameter="{Binding SelectedItem, 
                                         RelativeSource={RelativeSource AncestorType=ListBox}}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </ListBox>
                </Border>
            </Grid>
        </DockPanel>
    </Window>
